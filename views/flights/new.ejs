<%- include("../partials/header") %>

<h2>Enter a New Movie</h2>
<form action="/flights" method="POST">
  <label>Airline:
    <select name="airline">
        <option value="America">America</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select>
  </label><br>
  <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
  </label><br>
  <label>Departs:
    <!-- <input type="number" name="departs"> -->
    <input type="datetime-local" name="departs" value="<%= departsDate %>">
  </label><br>
  <label>Flight No:
    <input type="number" name="flightNo" min="10" max="9999">  </label><br>
  <input type="submit" value="Add Flight">
</form>

<%- include("../partials/footer") %>